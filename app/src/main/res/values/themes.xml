<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MisLugares2022" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_purple</item>
        <item name="colorPrimaryVariant">@color/darker_purple</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple</item>
        <item name="colorSecondaryVariant">@color/blue_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MisLugares2022.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MisLugares2022.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="MyFloatingButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="tint">@color/purple</item>
        <item name="backgroundTint">@color/white</item>

    </style>

    <style name="Theme.MisLugares2022.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyEstiloEditText">
        <item name="hintTextColor">@color/ligth_purple</item>
        <item name="editTextColor">@color/black</item>
        <item name="android:textViewStyle">@color/blue_dark</item>
        <item name="android:textSize">18sp</item>

    </style>
</resources>